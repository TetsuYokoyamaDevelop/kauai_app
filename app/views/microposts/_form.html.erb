<div class="container">
  <div class="table-responsive">
    <div class="form-group">
      <table>
        <tr>
          <td>
            <% if @user.image? %>
                <%= image_tag @user.image.thumb.url %>
              <% else %>
                <%= image_tag("/images/icon/no-image.png") %>
              <% end %><br>
              <br>
          </td>
          <td>
            <p class="text-primary">by : <%= @user.nickname %></p>
          </td>
          <th colspan="3"></th>
        </tr><br>
      </table><br>
      <%= form_for(@micropost) do |form| %>
              <div class="field">
                  <%= form.text_area :text, class: 'form-control', placeholder: "ツイート", autofocus: true  %><br>
              </div>
              <div class="center-block">
                <div class="actions">
                  <%= form.submit "ツイート",:class => "btn btn-primary btn-lg"%>
                </div>
              </div>
            <% end %><br>
        <%= link_to 'Back', microposts_path ,:class => "btn btn-secondary"%>
      </div>
  </div>
</div>
