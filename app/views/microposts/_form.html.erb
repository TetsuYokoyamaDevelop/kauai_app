<div class="container">
  <div class="table-responsive">
    <tr>
      <h3><span class="badge badge-success"><th scope="col">by : <%= @user.nickname %></th></span></h3>
      <th colspan="3"></th>
    </tr><br>
      <%= form_for(@micropost) do |form| %>
              <div class="field">
                  <%= form.text_area :text, class: 'form-control', placeholder: "ツイート", autofocus: true  %><br>
              </div>
              <div class="actions">
                <%= form.submit "ツイート",:class => "btn btn-primary"%>
              </div>
            <% end %><br>
        <%= link_to 'Back', microposts_path ,:class => "btn btn-secondary"%>
  </div>
</div>
