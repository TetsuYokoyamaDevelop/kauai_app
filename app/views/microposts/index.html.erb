<p id="notice" class="text-center"><%= notice %></p>
<h1 class ="text-center">Tetsutter</h1>
<div class="container">
  <div class="button_wrapper">
    <%= link_to 'ツイート', new_micropost_path ,:class => "btn btn-primary btn-lg" %>
  </div>
    <div class="table-responsive">
          <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">ニックネーム</th>
                <th scope="col">ツイート</th>
                <th scope="col">リプライ</th>
                <th colspan="3"></th>
              </tr>
            </thead>
        <tbody>
          <% @microposts.each do |micropost| %>
            <tr>
                <div class="row">
                    <div class="col-sm">
                        <td class="col-xs-3"><%= micropost.user.nickname %></td>
                    </div>
                    <div class="col-sm">
                        <td class="col-xs-3"><%= micropost.text %></td>
                    </div>
                    <div class="col-sm">
                      <td class="col-xs-3"><%= link_to 'リプライ', micropost_comments_path(micropost) ,:class => "btn btn-info"%></td>
                    </div>
                </div>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
