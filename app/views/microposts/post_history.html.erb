<p id="notice" class="text-center"><%= notice %></p>
<h1 class ="text-center">履歴</h1><br>
<div class="container">
  <div class="button_wrapper">
    <%= link_to 'ツイート', new_micropost_path ,:class => "btn btn-primary btn-lg" %>
  </div><br>
    <div class="table-responsive">
      <table class="table">
        <tbody>
      <% @microposts.each do |micropost| %>
        <tr>
          <td align="right">
            <% if micropost.user.image? %>
              <%= image_tag micropost.user.image.thumb.url %>
            <% else %>
              <%= image_tag("/images/icon/no-image.png") %>
            <% end %>
          </td>
            <td class="col-xs-3"><p class="text-primary">by: <%= micropost.user.nickname %></p><br>
              <p><%= micropost.text %></p><br>
              <%= link_to '編集', edit_micropost_path(micropost) ,:class => "btn btn-success"%>
              <%= link_to '削除', micropost, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-danger"%>
            </td>
            <td>
              <%= link_to 'リプライ', micropost_comments_path(micropost) ,:class => "btn btn-primary"%>

            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
