<h1 class="text-center">リプライ</h1><br>
<div class="container">
  <div class="form-group">
  <tr>
    <td>
    <% if @micropost.user.image? %>
        <%= image_tag @micropost.user.image.thumb.url %>
      <% else %>
        <%= image_tag("/images/icon/no-image.png") %>
      <% end %><br>
      <br>
    <h5><span class="p-2 badge badge-primary"><th scope="col">by : <%= @micropost.user.nickname %></th></span></h5>
    <th colspan="3"></th>
    </td>
  </tr>
    <p>
      <%= @micropost.text%>
    </p><br>
      <%= form_for(@comment, :url => micropost_comments_path) do |form| %>
        <div class="field">
          <%= form.text_area :replyment , class: 'form-control', placeholder: "リプライ", autofocus: true  %><br>
        </div>
        <div class="button_wrapper">
          <div class="actions">
            <%= form.submit "リプライ" ,:class => "btn btn-primary btn-lg" %><br>
          </div>
        </div>
        <% end %><br>
        <%= link_to 'Back',micropost_comments_path , :class => "btn btn-secondary"%>
    </div>
</div>
