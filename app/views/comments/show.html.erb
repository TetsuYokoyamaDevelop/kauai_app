<p id="notice" class="text-center"><%= notice %></p>
<h1 class ="text-center">Tetsutter</h1>
<div class="container">
  <div class="button_wrapper">
    <%= link_to 'ツイート', new_micropost_path ,:class => "btn btn-primary btn-lg" %>
  </div><br>
    <div class="table-responsive">
          <table class="table">
            <tbody>
          <% @microposts.each do |micropost| %>
            <tr>
                <td class="col-xs-3"><p class="text-primary">by: <%= micropost.user.nickname %></p><br>
                  <p><%= micropost.text %></p>
                </td>
                <td class="col-xs-3"><%= link_to 'リプライ', micropost_comments_path(micropost) ,:class => "btn btn-primary"%></td>
            </tr>
          <% end %>
          </tbody>
      </table>
    </div>
</div>
