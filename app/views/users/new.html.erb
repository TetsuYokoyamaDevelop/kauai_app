<h1 class="text-center">Register</h1>
<%= form_for(@user) do |form| %>
  <div class="container">
      <form class="form-horizontal" action="/action_page.php">
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Email:</label>
                  <div class="col-sm-10">
                    <%= form.text_field :email, class: 'form-control', placeholder: "Email"%>
                  </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">パスワード:</label>
                  <div class="col-sm-10">
                    <%= form.password_field :password , class: 'form-control', placeholder: "パスワード" %>
                  </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                  <label class="control-label col-sm-2" for="email">パスワード確認:</label>
                  <div class="col-sm-10">
                    <%= form.password_field :password_confirmation, class: 'form-control', placeholder: "パスワード確認"%><br>
                  </div>
               </div>
            </div>
            <div class="actions">
              <%= form.submit :class => "btn btn-primary"%><br>
            </div>
       <% end %><br>
      <%= link_to 'Back', login_path ,:class => "btn btn-secondary" %>
  </div>
</form>
